\newcommand{\twocolumnsentry}[2]{
    \begin{minipage}[t]{.7\textwidth}
        #1
    \end{minipage}\hfill
    \begin{minipage}[t]{.3\textwidth}
        \hfill\textsl{#2}
    \end{minipage}\\[3mm]
}
